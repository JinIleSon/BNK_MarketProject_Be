<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.bnk_marketproject_be.mapper.AdminVersionMapper">

    <!-- ✅ DTO 매핑 -->
    <resultMap id="VersionMap" type="kr.co.bnk_marketproject_be.dto.AdminVersionDTO">
        <id     property="id"          column="ID"/>
        <result property="versionName" column="VERSION_NAME"/>
        <result property="author"      column="AUTHOR"/>
        <result property="createdAt"   column="CREATED_AT"/>
        <result property="changeLog" column="CHANGE_LOG"/>
    </resultMap>

    <!-- ✅ 전체 목록 조회 -->
    <select id="findAll" resultMap="VersionMap">
        SELECT ID, VERSION_NAME, AUTHOR, CHANGE_LOG,CREATED_AT
        FROM VERSION
        ORDER BY ID DESC
    </select>

    <!-- ✅ 단건 조회 -->
    <select id="findById" parameterType="long" resultMap="VersionMap">
        SELECT ID, VERSION_NAME, AUTHOR, CHANGE_LOG,CREATED_AT
        FROM VERSION
        WHERE ID = #{id}
    </select>

    <!-- ✅ 등록 -->
    <insert id="insert" parameterType="kr.co.bnk_marketproject_be.dto.AdminVersionDTO">
        INSERT INTO VERSION (VERSION_NAME, AUTHOR, CHANGE_LOG)
        VALUES (#{versionName}, #{author}, #{changeLog})
    </insert>

    <!-- ✅ 삭제 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM VERSION WHERE ID = #{id}
    </delete>

    <!-- ✅ 여러 개 삭제 (선택 삭제용) -->
    <delete id="deleteByIds">
        DELETE FROM VERSION
        WHERE ID IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
